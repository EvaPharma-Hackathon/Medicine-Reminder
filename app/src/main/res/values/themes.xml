
<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->

<style name="Base.Theme.MedicineReminder" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="colorPrimary">@color/primary_color</item>
    <item name="colorPrimaryVariant">@color/primary_color</item>
    <item name="colorOnPrimary">@color/black</item>
    <item name="android:statusBarColor" >@color/top_bar</item>
    <item name="android:windowLightStatusBar">false</item>
    <item name="colorAccent">@color/primary_variant</item>

    <!-- Runda Custom Font. -->
    <item name="android:fontFamily">@font/font_family</item>
    <item name="fontFamily">@font/font_family</item>
</style>

<style name="AppTextViews" parent="TextAppearance.AppCompat.Medium">
    <item name="android:fontFamily">@font/runda_normal</item>
    <item name="fontFamily">@font/runda_normal</item>
    <item name="android:textColor">@color/title2</item>
    <item name="android:textSize">@dimen/text_size_12</item>
    <item name="android:textColorHint">?android:textColorHint</item>
</style>

<style name="AppTextViews.Medium" parent="AppTextViews">
    <item name="android:fontFamily">@font/runda_medium</item>
    <item name="fontFamily">@font/runda_medium</item>
</style>

<style name="AppTextViews.Light" parent="AppTextViews">
    <item name="android:fontFamily">@font/runda_light</item>
    <item name="fontFamily">@font/runda_light</item>
</style>

<!--    Auth-->
<style name="AppBarTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primary_color</item>
    <item name="colorPrimaryVariant">@color/primary_variant</item>
    <item name="colorOnPrimary">@color/black</item>
    <!-- Secondary brand color. -->
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" >@color/top_bar</item>
    <item name="android:windowLightStatusBar">false</item>
    <!-- Customize your theme here. -->

    <!-- Runda Custom Font. -->
    <item name="android:fontFamily">@font/font_family</item>
    <item name="fontFamily">@font/font_family</item>

</style>

<style name="bold_black_label">
    <item name="android:textAlignment">viewStart</item>
    <item name="android:textColor">@color/title2</item>
    <item name="android:textSize">@dimen/text_size_xsmall</item>
    <item name="android:textStyle">bold|normal</item>
    <item name="layout_constrainedWidth">true</item>
</style>

<style name="gray_text">
    <item name="android:textAlignment">viewStart</item>
    <item name="android:textColor">@color/netural_400</item>
    <item name="android:textSize">@dimen/text_size_xsmall</item>
    <item name="layout_constrainedWidth">true</item>
</style>

<style name="EmrCardView" parent="Widget.MaterialComponents.CardView">
    <item name="cardCornerRadius">8dp</item>
    <item name="boxStrokeColor">@color/netural_300</item>
    <item name="boxStrokeWidth">0.5dp</item>
    <item name="hintEnabled">false</item>
    <item name="elevation">1dp</item>
    <item name="strokeColor">@color/netural_300</item>
    <item name="strokeWidth">1dp</item>
</style>

<style name="Theme.MedicineReminder" parent="Base.Theme.MedicineReminder" />
<style name="BlackOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="cornerRadius">40dp</item>
    <item name="rippleColor">@color/title2</item>
    <item name="android:textColor">@color/title2</item>
    <item name="strokeColor">@color/title2</item>
    <item name="borderWidth">1dp</item>
    <item name="textAllCaps">false</item>
    <item name="minWidth">0dp</item>
    <item name="android:textSize">14sp</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:minWidth">10dp</item>
    <item name="android:minHeight">10dp</item>
</style>


</resources>